{
  "name": "stem-october-forum",
  "version": "1.0.0",
  "description": "Ultra-modern frontend for STEM October Forum magazine",
  "main": "src/index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "cd backend && node server.js",
    "server:dev": "cd backend && nodemon server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm start\"",
    "deploy:backend": "cd backend && vercel --prod",
    "deploy:frontend": "npm run build && vercel --prod",
    "deploy": "npm run deploy:backend && npm run deploy:frontend",
    "vercel-build": "npm run build"
  },
  "dependencies": {
    "framer-motion": "^10.16.4",
    "gsap": "^3.13.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.5.2",
    "react-router-dom": "^6.20.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
